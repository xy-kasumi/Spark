{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ES2022",
    "moduleResolution": "node",
    "allowJs": false,
    "checkJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": true,
    "removeComments": false,
    "baseUrl": "."
  },
  "include": [
    "*.ts",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "vue.global.js",
    "chart.und.js"
  ]
}